# NextAuth configuration
NEXTAUTH_URL=https://admin.dev.example.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Keycloak OIDC
KEYCLOAK_CLIENT_ID=admin-portal
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_ISSUER=https://auth.dev.example.com/realms/docs

# Keycloak Admin API
KEYCLOAK_URL=https://auth.dev.example.com
KEYCLOAK_REALM=docs

# Webmail redirect
WEBMAIL_HOST=webmail.dev.example.com

# SMTP configuration
SMTP_HOST=postfix.infra-mail.svc.cluster.local
SMTP_PORT=25
SMTP_FROM=noreply@dev.example.com
SMTP_FROM_NAME=MotherTree

# Tenant configuration
# TENANT_DOMAIN is the base domain (e.g., example.com)
TENANT_DOMAIN=example.com
# EMAIL_DOMAIN includes env prefix for user emails (e.g., dev.example.com for dev)
EMAIL_DOMAIN=dev.example.com

# Email sending mode
# Set to 'true' to send directly via SMTP to recovery email
# Set to 'false' to use Keycloak's execute-actions-email
USE_DIRECT_EMAIL=false

# Container image (set by create_env, override if needed)
# ADMIN_PORTAL_IMAGE_TAG=ghcr.io/myorg/mothertree-admin-portal:dev
