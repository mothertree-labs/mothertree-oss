# Account Portal Environment Variables
# Copy to .env and fill in values for local development

# Server
PORT=3000
BASE_URL=https://account.dev.example.com

# Session
SESSION_SECRET=change-me

# Redis (for session storage in production)
REDIS_HOST=localhost
REDIS_PORT=6379

# Keycloak OIDC
KEYCLOAK_ISSUER=https://auth.dev.example.com/realms/docs
KEYCLOAK_URL=https://auth.dev.example.com
KEYCLOAK_REALM=docs
KEYCLOAK_CLIENT_ID=account-portal
KEYCLOAK_CLIENT_SECRET=change-me

# Tenant
TENANT_DOMAIN=example.com
EMAIL_DOMAIN=dev.example.com
WEBMAIL_HOST=webmail.dev.example.com

# Stalwart (for device passwords)
STALWART_API_URL=http://stalwart.tn-example-mail.svc.cluster.local:8080
STALWART_ADMIN_PASSWORD=change-me

# Mail server connection details (shown to users for email client setup)
MAIL_HOST=mail.dev.example.com
IMAP_HOST=imap.dev.example.com
SMTP_HOST=smtp.dev.example.com
STALWART_IMAPS_PORT=9930
STALWART_SUBMISSION_PORT=58700
STALWART_IMAPS_APP_PORT=9940
STALWART_SUBMISSION_APP_PORT=5880

# Nextcloud (for CalDAV instructions)
FILES_HOST=files.dev.example.com
