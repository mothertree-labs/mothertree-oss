<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - MotherTree</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            sage: { DEFAULT: '#7C9A6C', dark: '#5A7A4C' },
            cream: '#FAF8F5',
            'warm-gray': '#6B6B6B',
          }
        }
      }
    }
  </script>
</head>
<body class="bg-cream min-h-screen p-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <header class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl text-sage">Device Passwords</h1>
        <p class="text-warm-gray mt-1"><%= user.email %></p>
      </div>
      <div class="flex gap-4">
        <a href="/auth/logout" class="text-warm-gray hover:text-sage-dark transition-colors">Sign Out</a>
      </div>
    </header>

    <!-- Create Device Password -->
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <h2 class="text-xl text-sage mb-4">Add a Device Password</h2>
      <p class="text-warm-gray text-sm mb-4">
        Create a password for email apps that don't support passkey login (iOS Mail, Thunderbird, etc).
      </p>

      <form id="createForm" class="flex gap-4">
        <input type="text" id="deviceName" required placeholder="e.g. iPhone, Thunderbird"
          class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sage"
          maxlength="50">
        <button type="submit"
          class="bg-sage text-white px-6 py-2 rounded-lg hover:bg-sage-dark transition-colors whitespace-nowrap">
          Create Password
        </button>
      </form>

      <!-- Generated password (shown once) -->
      <div id="generatedPassword" class="hidden mt-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
        <p class="text-amber-800 font-medium mb-2">Save this password now &mdash; it won't be shown again</p>
        <div class="flex items-center gap-2 mb-3">
          <code id="passwordValue" class="flex-1 bg-white px-4 py-2 rounded border font-mono text-lg tracking-wider select-all"></code>
          <button onclick="copyPassword()" class="px-4 py-2 bg-sage text-white rounded-lg hover:bg-sage-dark transition-colors">
            Copy
          </button>
        </div>
        <p id="copyConfirm" class="text-green-700 text-sm hidden">Copied!</p>
      </div>

      <div id="formError" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800"></div>
    </div>

    <!-- Existing Device Passwords -->
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <h2 class="text-xl text-sage mb-4">Your Device Passwords</h2>
      <div id="passwordsList">
        <p class="text-warm-gray">Loading...</p>
      </div>
    </div>

    <!-- Connection Instructions -->
    <% if (imapHost && imapsPort) { %>
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <h2 class="text-xl text-sage mb-4">Email Client Settings</h2>
      <p class="text-warm-gray text-sm mb-4">Use these settings to connect your email client.</p>

      <div class="space-y-4 text-sm">
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">Email</span>
          <span class="col-span-2 font-mono"><%= user.email %></span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">Password</span>
          <span class="col-span-2">Use a device password from above</span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">IMAP Server</span>
          <span class="col-span-2 font-mono"><%= imapHost %></span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">IMAP Port</span>
          <span class="col-span-2 font-mono"><%= imapsPort %> (SSL/TLS)</span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">SMTP Server</span>
          <span class="col-span-2 font-mono"><%= smtpHost %></span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">SMTP Port</span>
          <span class="col-span-2 font-mono"><%= submissionPort %> (STARTTLS)</span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">Authentication</span>
          <span class="col-span-2">Normal password</span>
        </div>
      </div>
    </div>
    <% } %>

    <!-- CalDAV / Calendar Instructions -->
    <% if (filesHost) { %>
    <div class="bg-white rounded-xl shadow-lg p-8">
      <h2 class="text-xl text-sage mb-4">Calendar (CalDAV) on Your Phone</h2>
      <p class="text-warm-gray text-sm mb-4">
        To sync your Mother-tree calendar with iOS Calendar, Android, or other CalDAV clients,
        you need a Nextcloud app password (separate from the email device passwords above).
      </p>

      <div class="mb-6">
        <h3 class="font-medium text-warm-gray mb-2">Step 1: Create a Nextcloud app password</h3>
        <ol class="list-decimal list-inside text-sm text-warm-gray space-y-1 ml-2">
          <li>Go to <a href="https://<%= filesHost %>/settings/user/security" target="_blank" class="text-sage hover:underline">Files &rarr; Security Settings</a></li>
          <li>Scroll to <strong>Devices &amp; sessions</strong></li>
          <li>Enter a name (e.g. "iPhone Calendar") and click <strong>Create new app password</strong></li>
          <li>Copy the generated password &mdash; it is shown only once</li>
        </ol>
      </div>

      <div class="mb-6">
        <h3 class="font-medium text-warm-gray mb-2">Step 2: Add the CalDAV account</h3>
        <p class="text-warm-gray text-sm mb-2"><strong>iOS:</strong> Settings &rarr; Calendar &rarr; Accounts &rarr; Add Account &rarr; Other &rarr; Add CalDAV Account</p>
        <p class="text-warm-gray text-sm mb-3"><strong>Android:</strong> Use <a href="https://www.davx5.com/" target="_blank" class="text-sage hover:underline">DAVx5</a> or a similar CalDAV app.</p>
      </div>

      <div class="space-y-4 text-sm">
        <div class="p-3 bg-cream rounded-lg">
          <span class="text-warm-gray block mb-1">Server</span>
          <div class="flex items-center gap-2">
            <code id="caldavUrl" class="flex-1 bg-white px-3 py-2 rounded border font-mono text-xs break-all select-all">https://<%= filesHost %>/remote.php/dav/principals/users/<%= user.email %>/</code>
            <button onclick="copyCaldav()" class="px-3 py-2 bg-sage text-white rounded-lg hover:bg-sage-dark transition-colors text-xs whitespace-nowrap">
              Copy
            </button>
          </div>
          <p id="caldavCopyConfirm" class="text-green-700 text-xs hidden mt-1">Copied!</p>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">Username</span>
          <span class="col-span-2 font-mono"><%= user.email %></span>
        </div>
        <div class="grid grid-cols-3 gap-2 p-3 bg-cream rounded-lg">
          <span class="text-warm-gray">Password</span>
          <span class="col-span-2">Use the Nextcloud app password from Step 1</span>
        </div>
      </div>
    </div>
    <% } %>
  </div>

  <script>
    async function loadPasswords() {
      try {
        const response = await fetch('/api/app-passwords');
        const passwords = await response.json();
        const container = document.getElementById('passwordsList');

        if (!Array.isArray(passwords) || passwords.length === 0) {
          container.innerHTML = '<p class="text-warm-gray">No device passwords yet.</p>';
          return;
        }

        container.innerHTML = passwords.map(p => `
          <div class="flex items-center justify-between p-3 bg-cream rounded-lg mb-2">
            <span class="font-medium">${escapeHtml(p.name)}</span>
            <button onclick="revokePassword('${escapeHtml(p.name)}')"
              class="text-red-500 hover:text-red-700 text-sm">
              Revoke
            </button>
          </div>
        `).join('');
      } catch (error) {
        document.getElementById('passwordsList').innerHTML =
          '<p class="text-red-500">Failed to load device passwords.</p>';
      }
    }

    document.getElementById('createForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const nameInput = document.getElementById('deviceName');
      const errorEl = document.getElementById('formError');
      const genEl = document.getElementById('generatedPassword');

      errorEl.classList.add('hidden');
      genEl.classList.add('hidden');

      try {
        const response = await fetch('/api/app-passwords', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ deviceName: nameInput.value.trim() }),
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Failed to create device password');
        }

        // Show the generated password
        document.getElementById('passwordValue').textContent = result.password;
        genEl.classList.remove('hidden');
        nameInput.value = '';
        loadPasswords();
      } catch (error) {
        errorEl.textContent = error.message;
        errorEl.classList.remove('hidden');
      }
    });

    async function revokePassword(name) {
      if (!confirm(`Revoke device password "${name}"? Any device using it will lose access.`)) return;

      try {
        const response = await fetch(`/api/app-passwords/${encodeURIComponent(name)}`, {
          method: 'DELETE',
        });
        if (response.ok) {
          loadPasswords();
        } else {
          const result = await response.json();
          alert(result.error || 'Failed to revoke password');
        }
      } catch (error) {
        alert('Failed to revoke password');
      }
    }

    function copyPassword() {
      const pw = document.getElementById('passwordValue').textContent;
      navigator.clipboard.writeText(pw).then(() => {
        const confirm = document.getElementById('copyConfirm');
        confirm.classList.remove('hidden');
        setTimeout(() => confirm.classList.add('hidden'), 2000);
      });
    }

    function copyCaldav() {
      const url = document.getElementById('caldavUrl').textContent;
      navigator.clipboard.writeText(url).then(() => {
        const confirm = document.getElementById('caldavCopyConfirm');
        confirm.classList.remove('hidden');
        setTimeout(() => confirm.classList.add('hidden'), 2000);
      });
    }

    function escapeHtml(str) {
      const div = document.createElement('div');
      div.textContent = str;
      return div.innerHTML;
    }

    loadPasswords();
  </script>
</body>
</html>
