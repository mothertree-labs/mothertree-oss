# Example Tenant - Production Secrets Template
# Copy this file to prod.secrets.yaml and fill in the actual values
# This file is gitignored - never commit real secrets

# Linode API (shared infrastructure)
linode:
  token: "PLACEHOLDER_LINODE_TOKEN"

# Cloudflare DNS
cloudflare:
  api_token: "PLACEHOLDER_CLOUDFLARE_API_TOKEN"
  zone_id: "PLACEHOLDER_CLOUDFLARE_ZONE_ID"

# TLS/Certificates
tls:
  email: "admin@example.com"

# Database passwords
database:
  postgres_password: "PLACEHOLDER_POSTGRES_PASSWORD"
  redis_password: "PLACEHOLDER_REDIS_PASSWORD"
  docs_password: "PLACEHOLDER_DOCS_DB_PASSWORD"
  stalwart_password: "PLACEHOLDER_STALWART_DB_PASSWORD"
  roundcube_password: "PLACEHOLDER_ROUNDCUBE_DB_PASSWORD"

# Keycloak (shared infrastructure)
keycloak:
  admin_password: "PLACEHOLDER_KEYCLOAK_ADMIN_PASSWORD"
  db_password: "PLACEHOLDER_KEYCLOAK_DB_PASSWORD"

# OIDC client secrets
oidc:
  docs_client_secret: "PLACEHOLDER_DOCS_OIDC_SECRET"
  nextcloud_client_secret: "PLACEHOLDER_NEXTCLOUD_OIDC_SECRET"
  synapse_client_secret: "PLACEHOLDER_SYNAPSE_OIDC_SECRET"
  stalwart_client_secret: "PLACEHOLDER_STALWART_OIDC_SECRET"
  roundcube_client_secret: "PLACEHOLDER_ROUNDCUBE_OIDC_SECRET"
  admin_portal_client_secret: "PLACEHOLDER_ADMIN_PORTAL_OIDC_SECRET"
  account_portal_client_secret: "PLACEHOLDER_ACCOUNT_PORTAL_OIDC_SECRET"

# Matrix configuration
matrix:
  registration_shared_secret: "PLACEHOLDER_MATRIX_REGISTRATION_SECRET"
  synapse_password: "PLACEHOLDER_SYNAPSE_DB_PASSWORD"

# TURN server
turn:
  shared_secret: "PLACEHOLDER_TURN_SECRET"

# S3 Storage - Matrix media
s3_matrix:
  access_key: "PLACEHOLDER_S3_ACCESS_KEY"
  secret_key: "PLACEHOLDER_S3_SECRET_KEY"

# S3 Storage - Docs
s3_docs:
  access_key: "PLACEHOLDER_DOCS_S3_ACCESS_KEY"
  secret_key: "PLACEHOLDER_DOCS_S3_SECRET_KEY"

# S3 Storage - Nextcloud files
s3_files:
  access_key: "PLACEHOLDER_FILES_S3_ACCESS_KEY"
  secret_key: "PLACEHOLDER_FILES_S3_SECRET_KEY"

# S3 Storage - Stalwart mail
s3_mail:
  access_key: "PLACEHOLDER_MAIL_S3_ACCESS_KEY"
  secret_key: "PLACEHOLDER_MAIL_S3_SECRET_KEY"

# SSH key for VPN/TURN servers
ssh:
  public_key: "ssh-ed25519 PLACEHOLDER_SSH_PUBLIC_KEY user@host"

# Google OAuth (for Keycloak identity provider)
google:
  client_id: "PLACEHOLDER_GOOGLE_CLIENT_ID"
  client_secret: "PLACEHOLDER_GOOGLE_CLIENT_SECRET"

# DKIM key for email signing
dkim:
  private_key: |
    -----BEGIN PRIVATE KEY-----
    PLACEHOLDER - Generate with: openssl genrsa 2048
    -----END PRIVATE KEY-----
  public_key: "PLACEHOLDER_DKIM_PUBLIC_KEY"

# Grafana admin
grafana:
  admin_password: "PLACEHOLDER_GRAFANA_PASSWORD"

# Jitsi JWT
jitsi:
  jwt_app_secret: "PLACEHOLDER_JITSI_JWT_SECRET"

# Matrix Alertbot (optional)
alertbot:
  access_token: "PLACEHOLDER_ALERTBOT_TOKEN"
  room_id: "PLACEHOLDER_ALERTBOT_ROOM_ID"

# Stalwart mail server
stalwart:
  admin_password: "PLACEHOLDER_STALWART_ADMIN_PASSWORD"

# Admin Portal
admin_portal:
  nextauth_secret: "PLACEHOLDER_NEXTAUTH_SECRET"

# Account Portal
account_portal:
  session_secret: "PLACEHOLDER_ACCOUNT_PORTAL_SESSION_SECRET"
