# Postfix transport map for inbound mail routing
# Auto-generated by deploy_infra from tenants/*/<env>.config.yaml
# Routes inbound mail to K8s Postfix via VPC NodePort
#
# Format: domain    smtp:[host]:port
# The K8s Postfix will then route to the correct tenant's Stalwart

{% if tenant_domains is defined and tenant_domains | length > 0 %}
{% for domain in tenant_domains %}
{{ domain }}    smtp:[{{ k8s_node_vpc_ip }}]:{{ k8s_postfix_nodeport }}
{% endfor %}
{% else %}
# No tenant domains configured - inbound mail routing disabled
{% endif %}
