# Postfix relay_domains - domains we accept inbound mail for
# Auto-generated by deploy_infra from tenants/*/<env>.config.yaml
#
# Format: domain OK
# These are domains for which we accept inbound mail and route to K8s

{% if tenant_domains is defined and tenant_domains | length > 0 %}
{% for domain in tenant_domains %}
{{ domain }} OK
{% endfor %}
{% else %}
# No tenant domains configured - no inbound mail will be accepted
{% endif %}
